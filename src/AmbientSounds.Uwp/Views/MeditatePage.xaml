<Page
    x:Class="AmbientSounds.Views.MeditatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AmbientSounds.Controls"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:JeniusApps.Common.UI.Uwp"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:AmbientSounds.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="using:AmbientSounds.Strings"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:vm="using:AmbientSounds.ViewModels"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid>
        <GridView
            Padding="0,0,14,0"
            ItemsSource="{x:Bind ViewModel.Guides}"
            SelectionMode="None">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="vm:GuideViewModel">
                    <StackPanel>
                        <Border
                            x:Name="ImageBorder"
                            Width="300"
                            Height="200"
                            CornerRadius="8">
                            <toolkit:ImageEx Source="{x:Bind ImagePath}" Stretch="UniformToFill" />
                        </Border>
                        <TextBlock
                            Margin="4,8,0,0"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                            Text="{x:Bind Name}"
                            TextTrimming="CharacterEllipsis" />
                        <TextBlock
                            MaxWidth="300"
                            Margin="4,0,0,0"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                            MaxLines="2"
                            Text="{x:Bind PreviewText}"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="WrapWholeWords" />

                        <Grid
                            MinHeight="40"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Stretch">
                            <Button
                                MinHeight="40"
                                HorizontalAlignment="Stretch"
                                Command="{x:Bind DownloadCommand}"
                                CommandParameter="{x:Bind}"
                                Visibility="{x:Bind ext:UIExtensions.InvertBoolToVis(IsDownloaded), Mode=OneWay}">
                                <Grid>
                                    <TextBlock Text="{x:Bind strings:Resources.DownloadText}" Visibility="{x:Bind ext:UIExtensions.InvertBoolToVis(DownloadProgressVisible), Mode=OneWay}" />
                                    <winui:ProgressRing
                                        Width="20"
                                        Height="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="{x:Bind DownloadProgressVisible, Mode=OneWay}"
                                        Value="{x:Bind DownloadProgressValue, Mode=OneWay}" />
                                </Grid>
                            </Button>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
